#include <iostream>
using namespace std;

unsigned long long* utworz_tablice(int rozmiar) {
    return new unsigned long long[rozmiar];
}

int main() {
    int wybor;
    int rozmiar_tab;

    do {
        cout << "=== MENU ===" << endl;
        cout << "1. Obliczanie poteg liczby 2" << endl;
        cout << "2. Uzupelnianie ciagiem liczb: 3, 6, 9, 12..." << endl;
        cout << "3. Uzupelnianie ciagiem Fibonacciego" << endl;
        cout << "0. Wyjscie" << endl;
        cout << "Podaj numer: ";
        cin >> wybor;

        if (wybor == 0) break;

        cout << "Podaj rozmiar tablicy: ";
        cin >> rozmiar_tab;

        unsigned long long* wsk = utworz_tablice(rozmiar_tab);

        switch (wybor) {
            case 1:
                cout << "Wybrales obliczanie poteg liczby 2." << endl;
                for (int i = 0; i < rozmiar_tab; i++) {
                    wsk[i] = 1ULL << i; // 2^i
                    cout << wsk[i] << " ";
                }
                cout << endl;
                break;

            case 2:
                cout << "Wybrales uzupelnianie ciagiem liczb 3, 6, 9, 12..." << endl;
                for (int i = 0; i < rozmiar_tab; i++) {
                    wsk[i] = (i + 1) * 3;
                    cout << wsk[i] << " ";
                }
                cout << endl;
                break;

            case 3:
                cout << "Wybrales uzupelnianie ciagiem Fibonacciego" << endl;
                if (rozmiar_tab > 0) wsk[0] = 0;
                if (rozmiar_tab > 1) wsk[1] = 1;
                for (int i = 2; i < rozmiar_tab; i++) {
                    wsk[i] = wsk[i - 1] + wsk[i - 2];
                }
                for (int i = 0; i < rozmiar_tab; i++) {
                    cout << wsk[i] << " ";
                }
                cout << endl;
                break;

            default:
                cout << "Nieprawidlowy wybor!" << endl;
                break;
        }

        delete[] wsk;

    } while (wybor != 0);

    cout << "Koniec programu." << endl;
    return 0;
}